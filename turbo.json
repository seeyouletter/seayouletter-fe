{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "lint": {
      "outputs": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "stylelint": {
      "outputs": [],
      "inputs": [
        "./apps/docs/**/*.ts",
        "./apps/docs/**/*.tsx",
        "./packages/ui/**/*.ts",
        "./packages/ui/**/*.tsx",
        "./apps/web/**/*.ts",
        "./apps/web/**/*.tsx"
      ]
    },
    "dev": {
      "cache": false
    },
    "build-storybook": {
      "outputs": ["dist/**"]
    },
    "storybook": {
      "outputs": ["storybook-static/**"],
      "dependsOn": ["build-storybook"],
      "cache": false
    }
  },
  "remoteCache": {
    "signature": true
  }
}
