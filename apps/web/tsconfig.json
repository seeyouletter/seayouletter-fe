{
  "extends": "tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@ui/*": ["../../packages/ui/*"],
      "@pages/*": ["pages/*"],
      "@hooks/*": ["hooks/*"],
      "@templates/*": ["templates/*"],
      "@atoms/*": ["atoms/*"],
      "@apis/*": ["libs/apis/*"],
      "@utils/*": ["libs/utils/*"]
    },
    "jsxImportSource": "@emotion/react"
  }
}
